@model IEnumerable<DOANCOSO.Models.Product>

<div class="container mt-4">
	<h2>Products</h2>
	<div class="row">
		<div class="col-md-9">
			<div class="row row-cols-1 row-cols-md-3 g-4">

				@foreach (var product in Model)
				{
					<!-- san pham -->
					<div class="col" style="text-align: center">
						<div class="card">
							<img src="@product.ImageUrl" alt="" class="card-img-top">
							<div class="card-body">
								<h5 class="card-title">@product.Name</h5>
								<p class="card-text">@product.Price</p>
								<p class="card-text">@product.Description</p>
								<p class="card-text">
									@if (product.Category != null)
									{
										@product.Category.Name
									}
								</p>
								<a class="btn btn-primary" asp-action="Display" asp-route-id="@product.Id">View</a> |
								<a class="btn btn-primary bg-info" asp-action="Update" asp-route-id="@product.Id">Edit</a> |
								<a class="btn btn-primary bg-danger" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
							</div>
						</div>
					</div>
				}
			</div>
		</div>

		<div class="col-md-3">
			<div class="bg-primary text-black p-3">
				<h5> Social Media</h5>
				<ul class="list-unstyled">
					<li><a class="text-black" href="#">Facebook</a></li>
					<li><a class="text-black" href="#">Twitter</a></li>
					<li><a class="text-black" href="#">Instagram</a></li>
					<li><a class="text-black" href="#">LinkedIn</a></li>
				</ul>
			</div>
		</div>
	</div>
</div>

