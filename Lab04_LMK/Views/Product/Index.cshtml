@model IEnumerable<DOANCOSO.Models.Product>

<div class="container mt-4">
	<h2>Products</h2>
	<div class="row">
		<div class="col-md-9">
			<div class="row row-cols-1 row-cols-md-3 g-4">

				@foreach (var product in Model)
				{
					<!-- san pham -->
					<style>
						.product-card {
							width: 100%;
							margin-bottom: 20px;
							border: 1px solid #dee2e6;
							border-radius: 10px;
							overflow: hidden;
							transition: transform 0.3s ease;
						}

							.product-card:hover {
								transform: translateY(-5px);
								box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
							}

							.product-card img {
								width: 100%;
								height: auto;
								border-bottom: 1px solid #dee2e6;
							}

							.product-card .card-body {
								padding: 20px;
								display: flex;
								flex-direction: column; /* Căn chỉnh nội dung theo chiều dọc */
							}

							.product-card .card-title {
								margin-bottom: 10px;
							}

							.product-card .btn-group {
								display: flex;
								gap: 10px; /* Khoảng cách giữa các nút */
								margin-top: 15px; /* Khoảng cách giữa nút và phần nội dung */
							}
					</style>

					<div class="col-md-4" style="text-align: center">
						<div class="product-card card">
							<img src="@product.ImageUrl" alt="" class="card-img-top">
							<div class="card-body">
								<h5 class="card-title">@product.Name</h5>
								<p class="card-text">@product.Price.ToString("#,##0") VND</p>
								<p class="card-text">@product.Description</p>
								<p class="card-text">
									@if (product.Category != null)
									{
										@product.Category.Name
									}
								</p>
								<div class="btn-group">							
									<a class="btn btn-primary" asp-action="Display" asp-route-id="@product.Id">View</a>
									<button type="button" class="btn btn-info">Đặt Xe</button>
									@if (User.IsInRole("Admin"))
									{
										<a class="btn btn-primary bg-info" asp-action="Update" asp-route-id="@product.Id">Edit</a>
										<a class="btn btn-primary bg-danger" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
									}
								</div>
							</div>
						</div>
					</div>

				}
			</div>
		</div>

		<div class="col-md-3">
			<div class="bg-primary text-white p-3 rounded">
				<h5 class="mb-4">Social Media</h5>
				<ul class="list-unstyled">
					<li class="mb-3">
						<a class="btn btn-outline-warning text-white" href="https://www.facebook.com">
							<i class="fab fa-facebook-f me-2"></i> Facebook
						</a>
					</li>
					<li class="mb-3">
						<a class="btn btn-outline-warning text-white" href="https://twitter.com">
							<i class="fab fa-twitter me-2"></i> Twitter
						</a>
					</li>
					<li class="mb-3">
						<a class="btn btn-outline-warning text-white" href="https://www.instagram.com">
							<i class="fab fa-instagram me-2"></i> Instagram
						</a>
					</li>
				</ul>
			</div>
			<div class=" text-white p-3 rounded">

				<!-- Card with an image on top -->
				<div class="card">
					<img src="~/images/cadilac.jpg" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">Card with an image on top</h5>
						<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
					</div>
				</div><!-- End Card with an image on top -->
				<!-- Card with an image on bottom -->


			</div>
			<div class=" text-white p-3 rounded">

				<!-- Card with an image on top -->
				<div class="card">
					<img src="~/images/cadilac.jpg" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">Card with an image on top</h5>
						<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
					</div>
				</div><!-- End Card with an image on top -->
				<!-- Card with an image on bottom -->


			</div>
		</div>
		



	</div>
</div>




